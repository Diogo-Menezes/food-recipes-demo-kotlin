<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_loading_view_height"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/searching_text"
        android:textAllCaps="true"
        android:textColor="@color/primaryLightColor"
        android:textSize="@dimen/recipe_publisher_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontalDottedProgress"
        app:layout_constraintEnd_toEndOf="@+id/horizontalDottedProgress"
        app:layout_constraintStart_toStartOf="@+id/horizontalDottedProgress" />

    <com.diogomenezes.recipesdemo.util.HorizontalDottedProgress
        android:id="@+id/horizontalDottedProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>